{
  "extends": "expo/tsconfig.base",
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/test-utils.ts",
    "src/**/test-setup.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    // "outDir": "lib", // Handled by specific tsconfig files
    "rootDir": "src",
    // "allowUnreachableCode": true, // Set to false in specific configs
    // "allowUnusedLabels": true, // Set to false in specific configs
    "verbatimModuleSyntax": true,
    // "declaration": true, // Handled by tsconfig.declarations.json
    "noEmit": true // Base config should not emit, specific configs will override
  }
}
